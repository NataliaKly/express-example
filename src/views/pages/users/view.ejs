<%- include('../../fragments/header.ejs'); %>

<div class="container">
    <% users.forEach(user => { %>
        <div class="card">
            <div class="card__wrapper">
                <div class="card__image"></div>
                <h2 class="card__title">
                    <%= user.name %>
                </h2>
                <div class="card__row">
                    <div class="card__column _title">Login:</div>
                    <div class="card__column"><%= user.login %></div>
                </div>
                <div class="card__row">
                    <div class="card__column _title">Email:</div>
                    <div class="card__column"><%= user.email %></div>
                </div>
            </div>
        </div>
    <% }); %>
</div>

<%- include('../../fragments/footer.ejs'); %>
